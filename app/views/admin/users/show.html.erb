<h1>Admin::Users#show</h1>
<section class="container">
  <h2><%= @user.user_name %>さんの情報</h2>
  <table>
    <thead>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td>会員ID</td>
        <td colspan="2"><%= @user.id %></td>
      </tr>
      <tr>
        <td>User_Name</td>
        <td><%= @user.user_name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td colspan="2"><%= @user.email %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td colspan="2"><%= @user.telephone_number %></td>
      </tr>
      <tr>
        <td>会員フラグ</td>
        <td colspan="2">
          <% if @user.is_editor_i18n == "通常会員" %>
            <span class="text-secondary">通常会員</span>
          <% else %>
            <span class="text-success">編集会員</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td colspan="2">
          <% if @user.is_deleted == false %>
						<span class="text-success">有効</span>
					<% else %>
						<span class="text-danger">退会済み</span>
					<% end %>
        </td>
      </tr>
        
    </tbody>
  </table>

  <span>
    <%= link_to "レビュー一覧", admin_reviews_path(@user), class: "btn btn-primary" %>
    <%= link_to "編集", edit_admin_user_path(@user), class: "btn btn-success" %>
    <!--%= link_to "注文履歴一覧を見る", admin_user_orders_path(@user), class: "btn btn-primary" %-->
  </span>

  <h3>
    <% if @work.first %>
      <p><%= @user.user_name %>の実績一覧 (全<%= @all_items_count %>件)</p>
      <%= render 'admin/works/index', works: @works, user: @user %>
      <!--paginate-->
    <% else %>
      <h3>実績がみつかりません。</h3>
    <% end %>
  </h3>
</section>
