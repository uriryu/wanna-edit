<div class="container">
  <h3 class="text-center">ジャンル管理</h3>
  <div class="mb-3">
    <h3>ジャンル新規登録</h3>
    <%= render 'form', genre: @genre, url: admin_genres_path, submit: '登録' %>
  </div>
  <div class="mb-3">
    <h3>ジャンル一覧</h3>
    <table class="table">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th>状態</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
              <% if genre.is_active? %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-secondary">無効</span>
              <% end %>
            </td>
            <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>