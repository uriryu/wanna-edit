<div>
  <div class="mx-3 my-1">ようこそ、<%= current_user.user_name %>さん!</div>
  <div class="nav">
    <li class="nav-item border rounded m-2">
      <%= link_to 'マイページ', mypage_path, class: 'nav-link text-dark'  %>
    </li>

    <% if current_user.is_editor_i18n == "編集会員" %>
      <li class="nav-item border rounded m-2">
        <%= link_to "商品登録", new_skill_path, class: 'nav-link text-dark' %>
      </li>
    <% end %>
    <li class="nav-item border rounded m-2">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
    </li>
  </div>
  <p>
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag "search[content]","", :placeholder =>"会員" %>
      <%= select_tag "search[model]", options_for_select({"会員" => "user", "商品" => "skill"}) %>
      <%= select_tag "search[method]", options_for_select({ "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }) %>
      <%= submit_tag '検索', class: "btn btn-primary" %>
    <% end %>
  </p>
</div>