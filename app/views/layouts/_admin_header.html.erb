<div class="flex">
  <li class="nav-item border rounded m-3">
    <%= link_to "実績一覧", admin_works_path, class: 'nav-link text-dark' %>
  </li>
  <li class="nav-item border rounded m-3">
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
  </li>
  <%= form_tag(admin_search_path, method: :get) do %>
    <%= text_field_tag "search[content]","", :placeholder =>"会員" %>
