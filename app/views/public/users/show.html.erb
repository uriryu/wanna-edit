<div class="container">
  <% if flash[:notice] %>
    <p class="text-active"><%= flash[:notice] %></p>
  <% end %>
  <h2 class="my-4">マイページ</h2>
  <h3 class="text-center">
    登録情報
    <% if @user.email == 'guest@example.com'%>
      <span class="text-danger">ゲストユーザーはユーザー情報の編集ができません。</span>
    <% else %>
      <%= link_to "編集する", edit_information_path, class: "btn btn-success m-2" %>
      <%= link_to "パスワードを変更する",  edit_user_registration_path, class: "btn btn-primary m-2" %>
    <% end %>
  </h3>
  <table class="mx-auto">
    <thead>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100), class: "rounded-circle font-weight-bold shadow-sm" %></td>
      </tr>
      <tr>
        <td>Name</td>
        <td><%= @user.user_name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>自己紹介文</td>
        <td><%= @user.bio %></td>
      </tr>
      <tr>
        <td>会員フラグ</td>
        <td>
          <% if @user.is_editor_i18n == "通常会員" %>
            <span class="text-primary">通常会員</span>
          <% else %>
            <span class="text-success">編集会員</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>
          <div class="d-flex">
            <%= link_to follows_user_path(@user) do %>
              <h6><%= @following_users.count %> Follow</h6>
            <% end %>&nbsp;&nbsp;
            <%= link_to followers_user_path(@user) do %>
              <h6><%= @follower_users.count %> Follower</h6>
            <% end %>
          </div>
        </td>
      </tr>
      <tr>
        <td>
          <%= link_to "お気に入りの実績", favorites_path(@user) %>
        </td>
      </tr>
    </tbody>
  </table>

      <div>
        <%= render 'mywork', user: @user %>
      </div>
    </div>
  <div class="flex">
    <!--%= link_to "注文履歴一覧", orders_path, class: "btn btn-primary ml2" %>-->
  </div>
</div>