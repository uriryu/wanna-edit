<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロワー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card w-100">
        <%= link_to user_path(user) do %>
        <p class="caption h4"><%= user.user_name %></p>
        <div class="d-flex">
          <%= image_tag user.get_profile_image(100,100), class: "rounded-circle font-weight-bold shadow-sm" %>
          <h4 class="ml-5"><%= user.bio %></h4>
        </div>
          <% if user.is_editor_i18n == "編集会員" %>
            <p class="caption"><%= "#{user.works.count} 実績" %></p>
            <!--レビューカウント/elseも記入-->
          <% end %>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @users %>
  </div>
</div>