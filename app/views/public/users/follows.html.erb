<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロー一覧</h1>
    </div>
    <div class="followers justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post w-100">
        <div class="row">
          <div class="col-2">
            <%= link_to profile_path(user) do %>
              <%= image_tag user.get_profile_image(100,100), class: "rounded-circle font-weight-bold shadow-sm" %>
            <% end %>
          </div>
          <div class="col">
            <h4><%= user.user_name %></h4>
            <p><%= user.bio %></p>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @users %>
  </div>
</div>