<h3 class="mt-3">レビューを書く</h3>
<div class="my-3">
  <%= form_with model: [work, review], url: work_reviews_path(work), local: true do |f| %>
    <div class="my-3">
      <%= f.label :opinion %>
      <%= f.text_area :body, class: 'form-control' %>
    </div>

    <div class="form-group" id="star">
      <%= f.label :reputation, '評価' %>
      <%= f.hidden_field :reputation, id: :review_star %>
    </div>

    <script>
      raty('#star<%= review.id %>',{});
    </script>

    <%= f.hidden_field :work_id, { value: work.id} %>
    <p class="ml-3 my-3"><%= link_to "他のレビューも見る", work_reviews_path(work.id), class: "button light" %></p>


    <div class="text-center">
      <%= f.submit "投稿する", class: 'btn btn-success' %>
    </div>

  <% end %>
</div>