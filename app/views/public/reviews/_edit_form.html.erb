<%= form_with model: review, url: work_review_path, local: true do |f| %>
  <%= render 'layouts/error_messages', resource: review %>
  <div class="field">
    <%= f.label :body, "レビュー" %>
    <%= f.text_area :body, autocomplete: "body", placeholder: "#{review.body}", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :reputation, "評価" %>
    <div id="star<%= review.id %>"></div>
    <script>
      $('#star<%= review.id %>').empty();
      $('#star<%= review.id %>').raty({
        size  :36,
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        half: true,
        scoreName: 'review[reputation]',
      });
    </script>
  </div>
  <div class="mt-3 row">
    <div class="col-md-2"><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></div>
    <div class="col"><%= link_to "削除する", work_review_path, method: :delete, class: "btn btn-danger" %></div>
  </div>
<% end %>