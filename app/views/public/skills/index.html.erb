<h1>Public::Skills#index</h1>
<div class="container">
  <% if params[:genre_id] %>
    <h2><%= @genre.name %>の商品一覧 (全<%= @all_skills_count %> 件)</h2>
  <% else %>
    <h2>商品一覧 (全<%= @all_skills_count %> 件)</h2>
  <% end %>

  <h3>
    <%= link_to "+", new_skill_path %>
  </h3>

  <% if @skills.first %>
    <%= render 'public/skills/index', skills: @skills %>
    <%= paginate @skills %>
  <% else %>
    <h3>対応する商品はありませんでした。</h3>
  <% end %>
</div>