<div class="container">
  <h2>注文情報確認</h2>
  <div class="flex">
    <table class="confirm_cart_items mr2 mb3 has_border">
      <thead>
        <tr>
          <th colspan="2">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <% skill = cart_item.skill %>
          <tr>
            <td>
              <%= image_tag skill.get_image, class: "cart_item_image" %>
            </td>
            <td><%= skill.name %></td>
            <td><%= skill.with_tax_price %> 円</td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %> 円</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <table class="confirm_prices has_border">
      <thead>
        <tr>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>商品合計</td>
          <td><%= @cart_item.sum(&:subtotal) %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= form_with model:@order, url: orders_path do |f| %>
		<div class="field">
			<%= f.label :payment_method, "支払い方法" %>
			<p><%= @order.payment_method_i18n %></p>
			<%= f.hidden_field :payment_method, value: @order.payment_method %>
		</div>
			<%= f.hidden_field :name, value: @order.name %>
		<div class="actions text-center">
			<%= f.submit "注文を確定する", class: "btn btn-primary submit_to_create_order" %>
		</div>
	<% end %>
</div>